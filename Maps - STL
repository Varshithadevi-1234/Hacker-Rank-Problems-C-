#include <iostream>
#include <map>
using namespace std;
int main() {
    int Q;
    cin >> Q;
 map<string, int> mp;
while(Q--) {
        int type;
        cin >> type;
if(type == 1) {
            string name;
            int marks;
            cin >> name >> marks;
            mp[name] += marks;     
        }
        else if(type == 2) {
            string name;
            cin >> name;
            mp.erase(name);        
        }
        else if(type == 3) {
            string name;
            cin >> name;
            cout << mp[name] << endl;  
        }
    }

    return 0;
}



